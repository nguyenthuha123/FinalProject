<h1>Department page</h1>
<button> <a href="/department/add"><i class="fa-light fa-circle-plus"></i>create new department</a></button>
<table class="table">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Department</th>
            <th scope="col">Leader</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
    
    {{#each departmentList}}
      <tr>
         <th scope="row"></th>
         <td>{{name}}</td>
         <td>{{user.email}}</td>
          <td>
                <button><a href="/department/edit/{{_id}}"><i class="fas fa-edit"></i>Edit</a></button>
                <button><a href="/department/delete/{{_id}}"><i class="fa fa-trash" aria-hidden="true"></i>Delete</a></button>
            </td>
      </tr>
    {{/each}} 
    </tbody>
</table>