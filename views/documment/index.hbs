<h1>This is page documment</h1>
<button> <a href="/documment/add"><i class="fa-light fa-circle-plus"></i>Create new form</a></button>
<table class="table">
    <thead>
        <tr>
            <th scope="col">No</th>
            {{!-- <th scope="col">Username</th>  --}}
            <th scope="col">Email</th>
            <th scope="col">Department</th>
             <th scope="col">Position</th>
            <th scope="col">Type of leave</th>
            <th scope="col">Start date</th>
            <th scope="col">End date</th> 
            <th scope="col">Description</th>
            <th scope="col">Status</th>
            <th scope="col">Reson rejected</th>
            <th scope="col">Action</th>
      
        </tr>
    </thead>
    <tbody>
        {{#each formleavelist}}
        <tr>
            <th scope="row"></th>

            <td>{{employeeEmail}}</td>
            <td>{{department}}</td>
            <td>{{position}}</td>
            <td>{{categorybreak.name}}</td>
            <td>{{startdate}}</td>
            <td>{{enddate}}</td>
            <td>{{description}}</td> 
            <td>{{status}}</td>
            <td>{{reasonRejected}}</td>
            <td>
                <button><a href="/documment/edit/{{_id}}"><i class="fas fa-edit"></i>Edit</a></button>
                <button><a href="/documment/delete/{{_id}}"  onclick="return confirm"('do you want to delete this form leave?')><i class="fa fa-trash" aria-hidden="true"></i>Delete</a></button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>


