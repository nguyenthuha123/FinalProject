<h1>Add new type of leave</h1>

<form action="" method="post">
    Type of leave: 
    <input type="text" name="name" id="name" required
    placeholder="enter type of leave" >
      {{#if InputErrors.name }}
      <div class="error">
            {{ InputErrors.name}}
      </div>
      {{/if }}
    <br><br>
    Description: 
      <input type="text" name="description" id="description" required
    placeholder="enter description type of leave" >
      {{#if InputErrors.description}}
      <div class="error">
            {{ InputErrors.description }}
      </div>
      {{/if }}
    <br><br>
    <input type="submit" value="Add">
</form>